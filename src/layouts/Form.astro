---
import '../../styles/form.css'
---


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="shadow-lg p-4">
                <form>
                    <div class="position-relative mb-3">
                        <i class="bi bi-person position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                        <input type="text" class="form-control ps-5" placeholder="Nombre" required>
                    </div>
                    <div class="position-relative mb-3">
                        <i class="bi bi-envelope-at position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                        <input type="email" class="form-control ps-5" placeholder="Email" required>
                    </div>
                    <div class="position-relative mb-3">
                        <i class="bi bi-chat-left-text position-absolute top-50 start-0 translate-middle-y ms-3"></i>
                        <textarea class="form-control ps-5 pt-4" id="mensaje" rows="2" placeholder="Mensaje"></textarea>
                    </div>
                    <button type="submit" class="btn w-100"><i class="bi bi-send-fill"></i> Enviar</button>
                </form>
            </div>
        </div>
    </div>
</div>